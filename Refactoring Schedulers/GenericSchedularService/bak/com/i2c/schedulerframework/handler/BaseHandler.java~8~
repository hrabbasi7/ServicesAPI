public abstract class BaseHandler
    implements Runnable {

  public final void run() {
    // TODO Auto-generated method stub
    beforeBody();
    mainBusinessLogic();
    afterBody();

  }
  public abstract void mainBusinessLogic();

  public void beforeBody(){
    System.out.println(">>>>>>>>>>>>> Before Main Business Logic <<<<<<<<<<<<<");

  }
  public void afterBody(){
    System.out.println(">>>>>>>>>>>>> After Main Business Logic <<<<<<<<<<<<<");
  }

}
